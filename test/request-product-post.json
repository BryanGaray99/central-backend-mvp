{
  "projectId": "0b6391fa-af99-4d81-a7b4-b21b737b9985",
  "section": "ecommerce",
  "entityName": "Product",
  "path": "/v1/api/products",
  "method": "POST",
  "requestBodyDefinition": [
    {
      "name": "name",
      "type": "string",
      "example": "Laptop Pro 15",
      "validations": {
        "minLength": 2,
        "required": true
      }
    },
    {
      "name": "description",
      "type": "string",
      "example": "The latest professional laptop.",
      "validations": {
        "required": true
      }
    },
    {
      "name": "price",
      "type": "number",
      "example": 1299.99,
      "validations": {
        "minimum": 0,
        "required": true
      }
    },
    {
      "name": "categoryId",
      "type": "string",
      "example": "cat-electronics-123",
      "validations": {
        "required": true
      }
    },
    {
      "name": "stock",
      "type": "number",
      "example": 150,
      "validations": {
        "minimum": 0,
        "required": true
      }
    },
    {
      "name": "imageUrl",
      "type": "string",
      "example": "https://example.com/images/laptop-pro.jpg"
    },
    {
      "name": "isActive",
      "type": "boolean",
      "example": true,
      "validations": {
        "default": true
      }
    }
  ]
} 